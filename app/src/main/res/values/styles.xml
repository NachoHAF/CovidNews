<resources>

    <style name="CustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomStyle.Settings" />

    <style name="CustomStyle.Settings.Icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="CustomStyle.Settings.Name" parent="CustomStyle.Text.Section" />

    <style name="CustomStyle.Settings.Title" parent="CustomStyle.Text.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomStyle.Settings.Header" parent="CustomStyle.Text.Header">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:textColor">@color/settingsHeaderColor</item>-->
    </style>

    <style name="CustomStyle.Settings.Summary" parent="CustomStyle.Text.Secondary">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomStyle.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomStyle.Text.Primary" parent="CustomStyle.Text">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="CustomStyle.Clickable">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CustomStyle.Text.Primary.Clickable" parent="CustomStyle.Text.Primary">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CustomStyle.Text.Secondary" parent="CustomStyle.Text">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="CustomStyle.Text.Header" parent="CustomStyle.Text.Primary">
        <item name="android:textSize">19sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="CustomStyle.Text.Section" parent="CustomStyle.Text.Primary">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
